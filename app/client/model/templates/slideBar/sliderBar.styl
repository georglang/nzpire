//Slidebar CSS
.slide-main {
  position: fixed;
  top: 60px;
  right: -4px;
  -webkit-transition-duration: 1s;
  -moz-transition-duration: 1s;
  -o-transition-duration: 1s;
  transition-duration: 1s;
}
.slide-container {
  height:400px;
  //width:196px;
  width:310px;
  border:2px solid lightblue;
  border-radius:5px;
    -moz-border-radius:5px;
    -webkit-border-radius:5px;
  background:black;
  color:lightgrey;
  position: fixed;
 top: 50px;
  right: -308px;
  -webkit-transition-duration: 1s;
  -moz-transition-duration: 1s;
  -o-transition-duration: 1s;
  transition-duration: 1s;
}
.slide-main:hover {
  right:294px;
}
.slide-main:hover .slide-container{
  right: -10px;
}

.slideOutArrow{
  display: block;
  height: 20px;
  width: 20px;
  background-image: -webkit-gradient(linear, left top, right bottom, from(#7d828c), color-stop(0.5, #303749), color-stop(0.5, #121a2e), to(#121a2e));
  border-left: solid 1px rgba(79, 79, 79, 0.75);
  border-bottom: solid 1px rgba(79, 79, 79, 0.75);
  -webkit-transform: rotate(45deg);
  -webkit-mask-image: -webkit-gradient(linear, left bottom, right top, from(#000000), color-stop(0.5,#000000), color-stop(0.5, transparent), to(transparent));
}


